@model IEnumerable<Blog>
@{
    ViewData["Title"] = "List";
    Layout = "_AdminLayout";
}


<div class="container mt-3">
    <h2>Blog List</h2>
    <hr />
    <div class="row">
        <div class="col">
            @if (Model.Count() > 0)
            {
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Resim</th>
                            <th>Başlık</th>
                            <th>Kayıt Tarihi</th>
                            <th>Yayın ?</th>
                            <th>Anasayfa ?</th>
                            <th>Slider ?</th>
                            <th></th>
                        </tr>  
                    </thead>
                    <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="align-middle">
                            <td class="align-middle">@item.BlogId</td>
                            <td class="align-middle">
                                <img src="~/img/@item.Image" alt="@item.Image" width="100" />
                            </td>
                            <td class="align-middle">@item.Title</td>
                            <td class="align-middle">@item.Date</td>
                            <td class="align-middle">
                                @if (item.isApproved)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td class="align-middle">
                                @if (item.isHome)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td class="align-middle">
                                @if (item.isSlider)
                                {
                                    <i class="fa fa-check"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times"></i>
                                }
                            </td>
                            <td class="align-middle">
                                <a class="btn btn-primary btn-sm" asp-action="Details" asp-controller="Blog" asp-route-id="@item.BlogId">Preview</a>
                                <a class="btn btn-success btn-sm" asp-action="Edit" asp-controller="Blog" asp-route-id="@item.BlogId">Edit</a>
                                <a class="btn btn-danger btn-sm text-white delete"
                                   data-id="@item.BlogId"
                                   data-controller="Blog"
                                   data-action="Delete"
                                   data-body-message="Are you sure to delete this blog?">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>
            }
            else
            {
                <div class="alert alert-danger">
                    Blog eklenmemiş
                </div>
            }
        </div>
    </div>
</div>

