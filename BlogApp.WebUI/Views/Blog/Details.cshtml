@model Blog
@{
    ViewData["Title"] = "Details";
}

<div class="container mt-3">
    <div class="row">

        <div class="col-md-8">
            <div class="card ">
                <div class="card-header">
                    @Model.Title
                </div>
                <img class="card-img-top" src="~/img/@Model.Image" alt="Card image cap">

                <div class="card-block">
                    <h4 class="card-title">@Model.Description</h4>
                    <p class="card-text">@Model.Body</p>
                    <a asp-action="Index" class="btn btn-primary">Geri Git</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            @await  Component.InvokeAsync("CategoryMenu")
        </div>
    </div>
</div>