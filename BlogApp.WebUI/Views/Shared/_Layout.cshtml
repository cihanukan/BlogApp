@using Microsoft.AspNetCore.Routing

@{
    Layout = null;
}

@{

    var page = ViewContext.RouteData.Values["Controller"];
}

@RenderSection("scripts", false)
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Blog Page</title>
    <link href="~/css/bundle.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,900" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
        <div class="container">

            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <a class="navbar-brand" href="/">REFORM BLOGS</a>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(page.ToString() == "Home" ? "active" : "")">
                        <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item @(page.ToString() == "Blog" ? "active" : "")">
                        <a class="nav-link" href="/Blog">Blog</a>
                    </li>
                </ul>
                <partial name="_SearchBox" />
                @if (User.Identity.IsAuthenticated)
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Logout" asp-controller="Auth">Logout</a>
                        </li>
                    </ul>
                }
                else
                {
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="Login" asp-controller="Auth">Login</a>
                        </li>
                    </ul>
                }

            </div>
        </div>
    </nav>
    <div id="main">
        <div class="container">
            @if (TempData["message"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" id="tempDataAlert" role="alert">
                    @TempData["message"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            }
        </div>
        @RenderBody()
    </div>

